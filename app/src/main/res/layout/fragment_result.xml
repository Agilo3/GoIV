<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


    </LinearLayout>

    <!--
    <include
        android:id="@+id/powerupFragmentEstimate"
        layout="@layout/fragment_powerup_estimate"
        android:visibility="gone"/>

    <include
        android:id="@+id/iVFragment"
        layout="@layout/fragment_ivresult"
        android:visibility="gone"/>


    <include
        android:id="@+id/movesFragment"
        layout="@layout/fragment_moves"
        android:visibility="gone"/>
        -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/iVFragmentViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="IV"/>

        <Button
            android:id="@+id/powerupFragmentViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Powerup"/>

        <Button
            android:id="@+id/movesFragmentViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Moves"/>


    </LinearLayout>
</LinearLayout>
